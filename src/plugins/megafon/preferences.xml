<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
            key="phone"
            title="Номер телефона *"
            dialogTitle="Номер телефона"
            dialogMessage="Введите номер телефона для входа в МегаФон.Банк."
            summary="|Номер телефона|{@s}"
            positiveButtonText="ОК"
            negativeButtonText="Отмена"
            obligatory="true">
    </EditTextPreference>
    <EditTextPreference
            key="password"
            title="Пароль"
            dialogTitle="Пароль (не обязательно)"
            dialogMessage="Введите пароль для входа в МегаФон.Банк."
            positiveButtonText="ОК"
            negativeButtonText="Отмена"
            inputType="textPassword"
            summary="||***********"
            obligatory="false">
    </EditTextPreference>
    <EditTextPreference
            key="startDate"
            obligatory="true"
            inputType="date"
            title="С какой даты загружать операции"
            defaultValue="2018-06-01T00:00:00.000Z"
            dialogTitle="Дата начала загрузки"
            dialogMessage="Введите дату, с которой загружать операции"
            positiveButtonText="ОК"
            negativeButtonText="Отмена"
            summary="|startDate|{@s}">
    </EditTextPreference>
</PreferenceScreen>
